/* pages/mineFeedback/mineFeedback.wxss */
.textareaBox{
    padding: 26rpx 30rpx 0;
}
.textareaBox view{
    height: 291rpx;
    width:690rpx;
    background: #F5F5F5;
    border-radius: 10rpx;
}
.textareaBox view textarea{
    width:690rpx;
    height: 291rpx;
    box-sizing: border-box;
    padding: 16rpx 24rpx;
    font-size: 24rpx;
    color: #333;
}
.cImgTit{
    padding: 0 30rpx;
    height: 99rpx;
    line-height: 99rpx;
    color: #333333;
    font-size: 32rpx;
}
.cImgTit text{
    font-size: 24rpx;
    color: #999999;
}
.chooseImg{
    padding: 0 30rpx;
    display: flex;
    align-items: center;
}
.addImgBtn{
    width: 222rpx;
    height: 222rpx;
    box-sizing: border-box;
    padding: 55rpx 0 0;
    background: #F5F5F5;
    border-radius: 10rpx;
    margin-right: 12rpx;
}
.addImgBtn image{
    width: 52rpx;
    height: 52rpx;
    display: block;
    margin: 0 auto 32rpx;
}
.addImgBtn view{
    font-size: 26rpx;
    color: #999999;
    text-align: center;
}
.imgBox{
    display: flex;
    justify-content: space-between;
}
.imgBox view{
    width: 222rpx;
    height: 222rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-right: 12rpx;
}
.imgBox view:last-child{
    margin-right: 0
}
.imgBox view image{
    display: block;
    width: 100%;
}
.contact{
    padding: 0 35rpx;
    margin-bottom: 54rpx;
}
.contact input{
    display: block;
    background: #F5F5F5;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 22rpx;
    font-size: 24rpx;
    color: #333;
    border-radius: 10rpx;
}
.submitBtn{
    padding: 0 30rpx 40rpx;
}
.submitBtn button{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 34rpx;
    color: #fff;
    background: #0063DB;
    border-radius: 44rpx;
    border:0;
}
