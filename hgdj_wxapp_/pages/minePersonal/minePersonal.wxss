.popBox{
position: fixed;
top: 100%;
left: 0;
width: 100%;
height: 100%;
background: rgba(0, 0, 0, 0.5);
z-index:9999;
transition: 0.5s;
}
.popBox2{
top: 0 !important;
}
.popMain{
position: absolute;
left: 0;
bottom: 0;
height:466rpx;
width: 100%;
background: #fff;
border-top-left-radius: 10rpx;
border-top-right-radius: 10rpx;
padding: 56rpx 0 26rpx;
transition: 0.5s;
}
.popMain2{
height: 330rpx;
}
.record{
width:120rpx;
height: 120rpx;
border-radius: 50%;
border-width: 20rpx;
border-style: solid;
border-color: #fff;
}
.border{
border-color: rgba(36,124, 237, 0.3);
}
.record image{
display: block;
width: 100%;
}
.timelong{
height: 70rpx;
line-height: 70rpx;
font-size: 48rpx;
color: #0362DC;
text-align: center;
}
.timets{
font-size: 22rpx;
line-height: 26rpx;
color: #999;
text-align: center;
margin-bottom: 30rpx;
}
.tapTs{
height: 84rpx;
line-height: 84rpx;
color: #000;
font-size: 30rpx;
padding: 0 0 8rpx;
text-align: center;
}
.recordIcon{
display: flex;
padding:70rpx 50rpx 0;
justify-content: space-around;
align-items: center;

}
.iconBox{
width: 116rpx;
height: 116rpx;
border: 2rpx solid #0362DC;
border-radius: 50%;
overflow: hidden;
}
.iconBox image{
display: block;
width: 100%;
}

.agreement {
    padding: 25rpx 24rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    color: #999;
}
.agreement view view {
    color: #ffa467;
}
.agreement .xieyi {
    display: flex;
    align-items: center;
    padding: 0 16rpx;
}
.agreement checkbox .wx-checkbox-input {
    border-radius: 50%;
    height: 44rpx;
    width: 44rpx;
    margin-top: -4rpx;
}
.agreement checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background-color: #ffa467;
    border: 1rpx solid #ffa467;
}
