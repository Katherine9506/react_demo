/* pages/playEvaluateDetail/playEvaluateDetail.wxss */
.wrap{
    padding: 57rpx 24rpx;
}
.userInfor{
    margin-bottom: 42rpx;
}
.userInfor .userImg{
    width: 144rpx;
    height: 144rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
}
.userInfor .userImg image{
    display: block;
    width: 100%;
}
.userName{
    font-size: 32rpx;
    color: #333333;
    text-align: center;
    margin-top: 8rpx;
    height: 96rpx;
    line-height: 96rpx;
}
.contact{
    width: 181rpx;
    height: 56rpx;
    line-height: 52rpx;
    color: #0362dc;
    font-size: 26rpx;
    border:2rpx solid #0362dc;
    box-sizing: border-box;
    padding: 0;
    border-radius: 28rpx;
    background: #F8F8F8;
}
.toScole{
    height: 60rpx;
    line-height: 60rpx;
    position: relative;
    text-align: center;
}
.toScole::after{
    position: absolute;
    top: 29rpx;
    left: 0;
    display: block;
    content: '';
    width: 100%;
    height: 1rpx;
    background: #EEEEEE;
    z-index: -1
}
.toScole text{
    font-size: 28rpx;
    color: #333333;
    display: inline-block;
    line-height: 60rpx;
    padding: 0 24rpx;
    background: #fff;
    vertical-align: top;
}
.starBox{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 114rpx;
}
.starBox image{
    display: block;
    width: 50rpx;
    height: 50rpx;
    margin: 0 25rpx;
}
.txtBox{
    width: 660rpx;
    height: 290rpx;
    background: #F5F5F5;
    margin: 13rpx auto 0;
    border-radius: 10rpx;
}
.txtBox textarea{
    display: block;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding:24rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #333;
}
.agreement label{
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 21rpx;
    font-size:32rpx;
    color: #333333;
}
.agreement checkbox .wx-checkbox-input {
    border-radius: 50%;
    height: 44rpx;
    width: 44rpx;
    margin-top: -4rpx;
}
.agreement checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background-color: #ffa467;
    border: 1rpx solid #ffa467;
}
.submitBtn{
    margin-top: 25rpx;
}
.submitBtn button{
    height: 88rpx;
    line-height: 88rpx;
    padding: 0;
    background: #0063DB;
    border-radius: 44rpx;
    color: #fff;
    font-size: 34rpx;
}